    "require": {
        "php": ">=5.3.0",
        "guzzle/http": "3.0.*",
        "guzzle/plugin-oauth": "3.0.*"
    },
    "require-dev": {
        "symfony/console": "dev-master",
        "justinrainbow/json-schema": "1.1.*",
        "guzzle/plugin-cookie": "3.0.*"
    },
    "autoload": {
        "psr-0": {
            "CultuurNet\\Auth": ["lib"]
        }
    },
    "minimum-stability": "dev",
    "bin": ["bin/cultuurnet-auth"]
}
